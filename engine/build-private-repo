#!/usr/bin/env bash

set -o nounset
set -o errexit
set -o pipefail
set -o xtrace

STARTUP_DIR="$( cd "$( dirname "$0" )" && pwd )"

cd "$STARTUP_DIR"/..

docker run --rm -it \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v $HOME/.m2:/root/.m2 \
    -v $PWD:/work \
    seldonio/core-builder:0.3 bash -c 'cd engine && make -f Makefile.ci build'

