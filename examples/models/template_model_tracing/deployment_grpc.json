{
    "apiVersion": "machinelearning.seldon.io/v1alpha2",
    "kind": "SeldonDeployment",
    "metadata": {
        "labels": {
            "app": "seldon"
        },
        "name": "tracing-example",
	"namespace": "seldon"	
    },
    "spec": {
        "name": "tracing-example",
        "oauth_key": "oauth-key",
        "oauth_secret": "oauth-secret",
        "predictors": [
            {
                "componentSpecs": [{
                    "spec": {
                        "containers": [
                            {
                                "name": "model1",				
                                "image": "seldonio/mock_classifier_grpc:1.1",
				"env": [
				    {
					"name": "TRACING",
					"value": "1"
				    },
				    {
					"name": "JAEGER_CONFIG_PATH",
					"value": "/etc/tracing/config/tracing.yml"
				    }
				],
				"volumeMounts": [
				    {
					"mountPath": "/etc/tracing/config",
					"name": "tracing-config"
				    }
				]
                            }
			],
			"terminationGracePeriodSeconds": 1,
			"volumes": [
			    {
				"name": "tracing-config",
				"configMap": {
				    "name": "tracing-config",
				    "items": [
					{
					    "key": "tracing.yml",
					    "path":  "tracing.yml"
					}
				    ]
				}
			    }
			]
		    }
		}],
                "graph": {
		    "name": "model1",
		    "endpoint": { "type" : "GRPC" },
		    "type": "MODEL",
		    "children": [
		    ]
		},
                "name": "tracing",
                "replicas": 1,
		"svcOrchSpec" : {
		    "env": [
			{
			    "name": "TRACING",
			    "value": "1"
			},
			{
			    "name": "JAEGER_AGENT_HOST",
			    "value": "jaeger-agent"
			},
			{
			    "name": "JAEGER_AGENT_PORT",
			    "value": "5775"
			},
			{
			    "name": "JAEGER_SAMPLER_TYPE",
			    "value": "const"
			},
			{
			    "name": "JAEGER_SAMPLER_PARAM",
			    "value": "1"
			}
		    ]				
		}
            }
        ]
    }
}
