{
    "apiVersion": "extensions/v1beta1",
    "kind": "DaemonSet",
    "metadata": {
        "labels": {
            "app": "docker-private-registry-proxy"
        },
        "name": "docker-private-registry-proxy"
    },
    "spec": {
        "template": {
            "metadata": {
                "labels": {
                    "app": "docker-private-registry-proxy"
                }
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "tcp",
                            "5000",
                            "docker-private-registry.default.svc.cluster.local"
                        ],
                        "image": "gcr.io/google_containers/proxy-to-service:v2",
                        "name": "proxy-tcp",
                        "ports": [
                            {
                                "containerPort": 5000,
                                "hostPort": 5000,
                                "name": "tcp",
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "100m",
                                "memory": "50Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}
