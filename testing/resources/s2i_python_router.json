{
    "apiVersion": "machinelearning.seldon.io/v1alpha2",
    "kind": "SeldonDeployment",
    "metadata": {
        "name": "myrouter"
    },
    "spec": {
        "name": "myrouter",
        "predictors": [
            {
                "componentSpecs": [{
                    "spec": {
                        "containers": [
                            {
                                "image": "seldonio/testmodel:0.1",
                                "imagePullPolicy": "Never",
                                "name": "model"
                            },
                            {
                                "image": "seldonio/testrouter:0.1",
                                "imagePullPolicy": "Never",
                                "name": "router"
                            }
                        ],
                        "terminationGracePeriodSeconds": 1
                    }
                }],
                "graph": {
                    "children": [{
			"children": [],
			"name": "model",
			"type": "MODEL"
                    }],
                    "name": "router",
		    "type": "ROUTER"
                },
                {
                  "image": "seldonio/testrouter_rest:0.1",
                  "imagePullPolicy": "Never",
                  "name": "router"
                }
              ],
              "terminationGracePeriodSeconds": 1
            }
          }
        ],
        "graph": {
          "children": [
            {
              "children": [],
              "name": "model",
              "endpoint": {
                "type": "REST"
              },
              "type": "MODEL"
            }
          ],
          "name": "router",
          "endpoint": {
            "type": "REST"
          },
          "type": "ROUTER"
        },
        "name": "myrouter",
        "replicas": 1
      }
    ]
  }
}
