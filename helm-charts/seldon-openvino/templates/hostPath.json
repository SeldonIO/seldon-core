{{- if (eq .Values.openvino.model_volume "hostPath") }}
{
    "kind": "PersistentVolume",
    "apiVersion": "v1",
    "metadata": {
        "name": "hostpath-pvc"
    },
    "spec": {
        "capacity": {
            "storage": "1Gi"
        },
        "hostPath": {
            "path": "/opt/ml",
            "type": ""
        },
        "accessModes": [
            "ReadWriteOnce"
        ],
        "persistentVolumeReclaimPolicy": "Retain",
        "storageClassName": "manual"
    }
}
{{- end }}
