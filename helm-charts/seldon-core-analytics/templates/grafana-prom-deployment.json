{
    "apiVersion": "v1",
    "items": [
        {
            "apiVersion": "apps/v1",
            "kind": "Deployment",
            "metadata": {
                "name": "grafana-prom-deployment",
                "namespace": "{{ .Release.Namespace }}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "app": "grafana-prom-server"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "grafana-prom-server"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "GF_SECURITY_ADMIN_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "grafana-prom-admin-password",
                                                "name": "grafana-prom-secret"
                                            }
                                        }
                                    },
                                    {{- range $key, $value := .Values.grafana.extraEnv }}
                                    {
                                        "name": "{{ $key }}",
                                        "value": "{{ $value }}"
                                    },
                                    {{- end}}
                                    {{ if .Values.grafana_anonymous_auth }}
                                    {
                                        "name": "GF_AUTH_ANONYMOUS_ENABLED",
                                        "value": "true"
                                    }
                                    {{ end }}
                                ],
                                "image": "grafana/grafana:6.1.6",
                                "name": "grafana",
                                "ports": [
                                    {
                                        "containerPort": 3000,
                                        "protocol": "TCP"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "grafana-prom",
                "namespace": "{{ .Release.Namespace }}"
            },
            "spec": {
                "ports": [
                    {
                        "port": 80,
                        "protocol": "TCP",
                        "targetPort": 3000
                    }
                ],
                "selector": {
                    "app": "grafana-prom-server"
                },
                "type": "{{ .Values.grafana_prom_service_type }}"
            }
        }
    ],
    "kind": "List",
    "metadata": {}
}
